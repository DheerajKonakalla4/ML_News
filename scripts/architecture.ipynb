from graphviz import Digraph
from pathlib import Path

OUT = Path("figures"); OUT.mkdir(parents=True, exist_ok=True)

g = Digraph("visual_verification",
            filename=str(OUT/"visual_verification_architecture"),
            format="png")

g.attr(rankdir="LR", bgcolor="white", fontname="Helvetica")

# ---------- Styles ----------
NODE = {"shape":"box", "style":"rounded,filled", "color":"#E2E8F0", "fillcolor":"#F8FAFC", "fontname":"Helvetica"}
TITLE = {"shape":"plaintext", "fontname":"Helvetica-Bold", "fontsize":"18"}

# ---------- Title ----------
g.node("ttl", "Visual Media Verification (Image / Video)", **TITLE)

# ---------- Ingest ----------
g.node("ing", "Upload\n(Image / Video)", **NODE)
g.node("type", "Media Type & Basic Checks\n(MIME, dimensions, duration)", **NODE)
g.edge("ing", "type")

# ---------- STAGE 1: Provenance (C2PA) ----------
with g.subgraph(name="cluster_c2pa") as c:
    c.attr(label="1) Provenance — C2PA / Content Credentials", color="#CBD5E1", style="rounded", fontname="Helvetica-Bold")
    c.node("c2pa_read", "Read C2PA Manifest\n(if present)", **NODE)
    c.node("c2pa_verify", "Verify Signatures & Claim Chain\n(creator, tools, edit history)", **NODE)
    c.node("c2pa_out", "Provenance Result\n(valid / invalid / missing)", **NODE)
    c.edge("c2pa_read", "c2pa_verify")
    c.edge("c2pa_verify", "c2pa_out")

# ---------- STAGE 2: Watermark detection (e.g., SynthID) ----------
with g.subgraph(name="cluster_wm") as c:
    c.attr(label="2) Watermark Detection — vendor-specific (e.g., SynthID)", color="#FDE68A", style="rounded", fontname="Helvetica-Bold")
    c.node("wm_scan", "Scan for Invisible Watermark\n(frames &/or full image)", **NODE)
    c.node("wm_det", "Detector (e.g., DeepMind SynthID)\nimage/video/text/audio modes", **NODE)
    c.node("wm_out", "Watermark Result\n(found / not found / uncertain)", **NODE)
    c.edge("wm_scan", "wm_det")
    c.edge("wm_det", "wm_out")

# ---------- STAGE 3: Deepfake forensics ----------
with g.subgraph(name="cluster_fx") as c:
    c.attr(label="3) Forensic Detection — model-based", color="#C7D2FE", style="rounded", fontname="Helvetica-Bold")
    c.node("vid_pre", "Video Preprocess:\nKeyframe sampling + Face detect/align", **NODE)
    c.node("img_pre", "Image Preprocess:\nFace/Region crop + Norm", **NODE)
    c.node("cnn", "CNN/Transformer Ensemble\n(Xception/EfficientNet/ViT)", **NODE)
    c.node("bench", "Trained/Evaluated on\nFaceForensics++, DFDC", **NODE)
    c.node("fx_out", "Forensic Score\n(p(fake) ∈ [0,1])", **NODE)
    c.edge("vid_pre", "cnn")
    c.edge("img_pre", "cnn")
    c.edge("cnn", "bench", style="dashed", color="#94A3B8")
    c.edge("cnn", "fx_out")

# ---------- ROUTING from type ----------
g.edge("type", "c2pa_read")
g.edge("type", "wm_scan")
# route by media kind
g.edge("type", "vid_pre", label="video", fontsize="10", color="#64748B")
g.edge("type", "img_pre", label="image", fontsize="10", color="#64748B")

# ---------- STAGE 4: Fusion & Reporting ----------
with g.subgraph(name="cluster_fuse") as c:
    c.attr(label="4) Fusion + Decision + Reporting", color="#86EFAC", style="rounded", fontname="Helvetica-Bold")
    c.node("fuse", "Score Fusion\n(C2PA + Watermark + Forensics)", **NODE)
    c.node("thresh", "Calibrated Thresholds\n+ Risk Rules", **NODE)
    c.node("out", "Decision + Confidence\n(REAL / AI-Generated / Uncertain)", **NODE)
    c.node("rep", "Verification Report\n• C2PA details & chain\n• Watermark status\n• Forensic scores & frames", **NODE)
    c.edge("fuse", "thresh")
    c.edge("thresh", "out")
    c.edge("out", "rep")

# ---------- Connect previous stages to fusion ----------
g.edge("c2pa_out", "fuse")
g.edge("wm_out", "fuse")
g.edge("fx_out", "fuse")

# ---------- Optional ops ----------
with g.subgraph(name="cluster_ops") as c:
    c.attr(label="(Ops) Monitoring & Review", color="#E5E7EB", style="rounded", fontname="Helvetica-Bold")
    c.node("log", "Logging & Audit Trail", **NODE)
    c.node("htri", "Human Triage for\nUncertain/High-risk", **NODE)
    c.edge("rep", "log")
    c.edge("out", "htri", label="uncertain", fontsize="10", color="#64748B")

# Render PNG & SVG
g.render(cleanup=True)
g.format = "svg"
g.render(cleanup=True)

print("Saved:", (OUT/"visual_verification_architecture.png").resolve())
print("Saved:", (OUT/"visual_verification_architecture.svg").resolve())
